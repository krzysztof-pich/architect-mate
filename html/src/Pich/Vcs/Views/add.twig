{% extends "layout.twig" %}

{% block title %}Add new vcs entry{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <form class="form-horizontal" method="POST" action="/vcs/save">
                    <div class="card-body">
                        <div class="form-group row">
                            <label for="repository_name" class="col-sm-3 text-right control-label col-form-label">Repository Name</label>
                            <div class="col-sm-9">
                                <input name="repository_name" type="text" class="form-control" id="repository_name" placeholder="Repository Name Here">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="direcotry" class="col-sm-3 text-right control-label col-form-label">Directory</label>
                            <div class="col-sm-9">
                                <input name="directory" type="text" class="form-control" id="directory" placeholder="Directory Path Here">
                            </div>
                        </div>
                    </div>
                    <div class="border-top">
                        <div class="card-body">
                            <button type="button" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
